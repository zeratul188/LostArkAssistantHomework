<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imgIcon"
                android:layout_gravity="center"
                android:src="@drawable/hw1"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtName"
                android:textSize="14dp"
                android:textColor="@color/main_font"
                android:hint="0~99"
                android:clickable="true"
                android:focusableInTouchMode="true"
                android:maxLength="30"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:background="@drawable/edit_style"
                android:padding="10dp"
                android:textColorHint="@color/disabled_font"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/ic_baseline_remove_24"
                android:background="#00000000"
                android:layout_margin="5dp"
                android:id="@+id/btnMinDown"
                android:layout_gravity="center"/>
            <EditText
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/edtNow"
                android:textSize="14dp"
                android:textColor="@color/main_font"
                android:hint="0~99"
                android:clickable="true"
                android:focusableInTouchMode="true"
                android:maxLength="2"
                android:inputType="number"
                android:gravity="center"
                android:background="@drawable/edit_style"
                android:padding="5dp"
                android:textColorHint="@color/disabled_font"/>
            <ImageButton
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/ic_baseline_add_24"
                android:background="#00000000"
                android:layout_margin="5dp"
                android:id="@+id/btnMinUp"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textSize="14dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textColor="@color/main_font"/>
            <ImageButton
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/ic_baseline_remove_24"
                android:background="#00000000"
                android:layout_margin="5dp"
                android:id="@+id/btnMaxDown"
                android:layout_gravity="center"/>
            <EditText
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/edtMax"
                android:textSize="14dp"
                android:textColor="@color/main_font"
                android:hint="1~99"
                android:clickable="true"
                android:focusableInTouchMode="true"
                android:maxLength="2"
                android:inputType="number"
                android:gravity="center"
                android:background="@drawable/edit_style"
                android:padding="5dp"
                android:textColorHint="@color/disabled_font"/>
            <ImageButton
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/ic_baseline_add_24"
                android:background="#00000000"
                android:layout_margin="5dp"
                android:id="@+id/btnMaxUp"
                android:layout_gravity="center"/>
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="1dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="단위 : "
                android:textSize="14dp"
                android:textColor="@color/main_font"/>
            <Spinner
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:spinnerMode="dropdown"
                android:background="@drawable/background_spinner"
                android:popupBackground="@color/background"
                android:layout_gravity="center"
                android:id="@+id/sprEnd"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/btnDelete"
            android:src="@drawable/ic_baseline_delete_outline_24"
            android:background="#00000000"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_drag_handle_24"
            android:id="@+id/imgHandle"/>
    </LinearLayout>
</LinearLayout>