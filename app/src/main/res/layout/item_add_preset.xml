<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutBackground"
    android:padding="10dp">
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="5dp"
        android:src="@drawable/hw1"
        android:id="@+id/imgIcon"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/imgIcon"
        android:id="@+id/txtName"
        android:layout_gravity="center"
        android:text="Homework Name"
        android:layout_marginLeft="5dp"
        android:textSize="16dp"
        android:textColor="@color/main_font"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/txtMax"
        app:layout_constraintRight_toLeftOf="@id/txtMax"
        android:id="@+id/txtMaxInfo"
        android:text="최대치"
        android:layout_marginRight="5dp"
        android:textSize="10dp"
        android:textColor="@color/sub_font"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="99"
        android:textSize="20dp"
        android:id="@+id/txtMax"
        android:textColor="@color/sub_font"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/txtEnd"
        app:layout_constraintRight_toLeftOf="@id/txtEnd"
        android:text="단위"
        android:layout_marginRight="5dp"
        android:textSize="10dp"
        android:textColor="@color/sub_font"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/txtMaxInfo"
        android:layout_marginRight="10dp"
        android:text="회"
        android:textSize="20dp"
        android:id="@+id/txtEnd"
        android:textColor="@color/sub_font"/>
</androidx.constraintlayout.widget.ConstraintLayout>