<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:id="@+id/layoutBackground"
    android:background="@drawable/item_checklist_background"
    android:padding="5dp">
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imgIcon"
        android:src="@drawable/hw1"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <ProgressBar
                android:id="@+id/progressRest"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="150dp"
                android:layout_height="6dp"
                android:layout_above="@id/txtName"
                android:layout_marginBottom="3dp"
                android:background="@drawable/rest_progress_image"
                android:max="10"
                android:progress="5"
                android:progressDrawable="@drawable/rest_progress_style" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtName"
                android:text="숙제 이름"
                android:layout_centerVertical="true"
                android:textColor="@color/main_font"
                android:textSize="16dp"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtCount"
                android:text="1/2"
                android:textSize="20dp"
                android:textColor="@color/main_font"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtEnd"
                android:text="회"
                android:textSize="12dp"
                android:layout_marginLeft="2dp"
                android:textColor="@color/main_font"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>