<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="카오스 던전"
            android:textSize="14dp"
            android:textColor="@color/main_font"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtDungeon"
            android:text="0"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="@color/progress"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/100"
            android:textSize="14dp"
            android:textColor="@color/main_font"/>
    </LinearLayout>
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:thumbTint="@color/progress"
        android:progressTint="@color/progress"
        android:id="@+id/seekDungeon"
        android:max="10"
        android:layout_marginTop="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="가디언 토벌"
            android:textSize="14dp"
            android:textColor="@color/main_font"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtBoss"
            android:text="0"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="@color/progress"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/100"
            android:textSize="14dp"
            android:textColor="@color/main_font"/>
    </LinearLayout>
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:thumbTint="@color/progress"
        android:progressTint="@color/progress"
        android:id="@+id/seekBoss"
        android:max="10"
        android:layout_marginTop="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="에포나 의뢰"
            android:textSize="14dp"
            android:textColor="@color/main_font"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtQuest"
            android:text="0"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="@color/progress"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/100"
            android:textSize="14dp"
            android:textColor="@color/main_font"/>
    </LinearLayout>
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:thumbTint="@color/progress"
        android:progressTint="@color/progress"
        android:id="@+id/seekQuest"
        android:max="10"
        android:layout_marginTop="5dp"/>
</LinearLayout>